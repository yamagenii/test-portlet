## ---------------------------------------------------------------------------
##set($tabs = [["メモ一覧", "",""]])
#set ($indicator_id = "indicator-list-")
## ---------------------------------------------------------------------------
#AUIcontentsAreaHeader()
<div class="auiSummaryMeta clearfix">
<form class="auiSearch" id="searchForm_$!{portlet.ID}" action="$!jslink.getPortletById($!portlet.ID)" onsubmit="aimluck.io.postViewPage(this, '$!{portlet.ID}', 'search-${indicator_id}'); return false;">
<input type="hidden" name="template" value="MemoListScreen"/>
<input class="text floatLeft long" type="text" name="keyword" id="q$!{portlet.ID}" style="margin-right:5px;" value="$!result.targetKeyword"/>
<a class="auiButtonSearch floatLeft" onclick="dojo.byId('searchForm_$!{portlet.ID}').onsubmit();">検索</a>
</form>
<div class="floatLeft ml10" style="padding-top: 0.4em;">#ALajaxIndicator("search-${indicator_id}" "$!{portlet.ID}" "&nbsp;")</div>
</div>
#ALajaxIndicator("${indicator_id}" "$!{portlet.ID}" "")
<div id="listmessageDiv"></div>
#ALajaxlistformheaderAction('Memo')
#if($result.List.size() == 0)
<div class="message">指定された条件に該当するメモはありません。</div>
#else
<div class="auiSummaryMeta clearfix">
<div class="floatLeft">
#AUIajaxbuttonCheckboxDelete('削除する' "$!jslink.getPortletById($!portlet.ID).addQueryData('template','MemoFormJSONScreen').addQueryData('mode','multi_delete')" "$indicator_id" "$!portlet.ID" "aipo.memo.onReceiveMessage")
</div>
#AUIajaxpageview('MemoListScreen' $result)
</div>
#if($!result.targetKeyword && ($!result.targetKeyword.toString() != ""))
#AUISummaryDiv()
#AUIsearchresult($!result.targetKeyword.toString())
#AUISummaryDivfooter()
#end
#AUIrowTableWide()
<tr>
#ALtdheadThin("#ALswitchCheckbox()")
#ALtdheadW75("#ALajaxsort('memo_name' 'タイトル' $result 'MemoListScreen')")
#ALtdheadThin("#ALajaxsort('update_date' '更新日' $result 'MemoListScreen')")
</tr>

#foreach ($record in $result.List)
<tr>
#ALtdcellAtt("<input name='check$!record.MemoId' type='checkbox' value='$!record.MemoId'/>" 'align="center"')
#ALtdcellheader()
<a href="javascript:void(0);" onclick="aipo.common.showDialog('$!utils.escapeXML($!jslink.getPortletById($!portlet.ID).addQueryData("template","MemoDetailScreen").addQueryData("entityid",$record.MemoId))');">$!record.MemoName</a>
#ALtdcellfooter()
#ALtdcellAtt($!record.UpdateDate 'nowrap="nowrap"')
</tr>
#end

#ALtablefooter()
<div class="auiSummaryMeta clearfix">
	<div class="floatLeft">
        #AUIajaxbuttonCheckboxDelete('削除する' "$!jslink.getPortletById($!portlet.ID).addQueryData('template','MemoFormJSONScreen').addQueryData('mode','multi_delete')" "$indicator_id" "$!portlet.ID" "aipo.memo.onReceiveMessage")
    </div>
    #AUIajaxpageview('MemoListScreen' $result)
</div>
#end
#ALformfooter()
#AUIcontentsAreaFooter()

#parse("/portlets/html/ja/memo-widgets.vm")
